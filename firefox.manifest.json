{
  "manifest_version": 2,
  "name": "Blockfolio browser extension",
  "description": "Unofficial browser extension which allows you to browse Blockfolio inside a browser.",
  "version": "1.2",
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": [
      "js/jquery-3.3.1.min.js",
      "js/background.js"
    ]
  },
  "icons": {
    "16": "img/btc_icon_16.png",
    "48": "img/btc_icon_48.png",
    "128": "img/btc_icon_128.png"
  },
  "browser_action": {
    "default_icon": "img/btc_icon_48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://*.blockfolio.com/*"
  ],
  "applications": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}